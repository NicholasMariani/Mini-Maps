CREATE TRIGGER `OnDeleteUpdateLocationRating` AFTER DELETE ON `Person_Location`
 FOR EACH ROW UPDATE Location SET busyRating = 
		  (Select AVG(rating) FROM Person_Location 
            	  WHERE Location_id = old.Location_id) 
             WHERE Lid = old.Location_id